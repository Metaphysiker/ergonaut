<% content_for :open_graph do %>
  <%= tag :meta, property: "og:site_name", content: "ErgoSubmissions.org" %>
  <%= tag :meta, property: "og:type", content: "website" %>
  <%= tag :meta, property: "og:title", content: "Sign In" %>
  <%= tag :meta, property: "og:url", content: signin_url %>
  <%= tag :meta, property: "og:image", content: request.protocol +
																								request.host_with_port +
																								image_path('E600.png') %>
<% end %>

<div class="row">
  <div class="span6 offset3">
		<legend>Sign in</legend>
		
	  <%= form_for(:session, url: sessions_path, html: { class: "form-horizontal" }) do |f| %>

			<div class="control-group">
	      <%= f.label :email, class: "control-label" %>
				<div class="controls">
					<%= f.text_field :email, value: @email %>
		    </div>
		  </div>
		
			<div class="control-group">
	      <%= f.label :password, class: "control-label" %>
				<div class="controls">
					<%= f.password_field :password %>
					<%= link_to "Forgot your password?", new_password_reset_path %>
		    </div>
		  </div>
		
			<div class="control-group">
				<div class="controls">
					<%= f.submit "Sign in", class: "btn btn-primary" %>
				</div>
		  </div>
		
	  <% end %>

  	<p>New user? <%= link_to "Sign up!", signup_path %></p>
  </div>
</div>