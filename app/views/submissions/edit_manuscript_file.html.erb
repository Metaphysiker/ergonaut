<div class="row">
  <div class="span8 offset2">
		
		<h3 class="center">
			<%= link_to "\"#{@submission.title}\"", 
									@submission.manuscript_file.to_s, 
									target: "_blank" %>
		</h3>
		<h4 class="center">
			by <%= @submission.author.full_name %>
		</h4>
		
		<br>
		
		<legend>
			Replace manuscript file
		</legend>
		
		<%= form_for @submission, 
								 url: { action: :update_manuscript_file }, 
								 html: { multipart: true, class: 'form-horizontal' } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
				
			<fieldset>
				
				<div class="control-group">
		      <%= f.label :manuscript_file, "Replace with file:",
																				class: "control-label"  %>
					<div class="controls">
						<%= f.file_field :manuscript_file %>
					</div>
				</div>
				
				<div class="control-group">
					<div class="controls">
						<%= link_to 'Cancel', submission_path(@submission), class: "btn" %>
						<%= f.submit "Submit", class: "btn btn-primary" %>
					</div>
				</div>
			
			</fieldset>
			
		<% end %>
		
		
		
  </div>
</div>